<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:XboxMock.ViewModels.Pages"
             xmlns:entities="clr-namespace:XboxMock.ViewModels.Entities"
             x:Class="XboxMock.Views.ContentPages.HomePage"
             x:Name="Page"
             x:DataType="viewModels:HomePageViewModel">
    
    <ContentPage.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ScrollView
                x:Name="ScrollView"
                Scrolled="ScrollView_OnScrolled"
                VerticalScrollBarVisibility="Never">
                <StackLayout
                    Margin="0,110,0,0">
                    <CarouselView
                        VerticalScrollBarVisibility="Never"
                        HorizontalScrollBarVisibility="Never"
                        ItemsSource="{Binding GameCards}">
                        <CarouselView.ItemTemplate>
                            <DataTemplate
                                x:DataType="entities:GameCardViewModel">
                                <Border
                                    HeightRequest="370"
                                    WidthRequest="370"
                                    StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Image
                                            Source="{Binding ImageSource}"/>
                                        <StackLayout
                                            HorizontalOptions="Fill"
                                            VerticalOptions="Fill">
                                            <StackLayout.Background>
                                                <LinearGradientBrush EndPoint="0,0.95">
                                                    <GradientStop Color="Transparent" Offset="0.4"/>
                                                    <GradientStop Color="Black" Offset="1"/>
                                                </LinearGradientBrush>
                                            </StackLayout.Background>
                                        </StackLayout>
                                        <StackLayout
                                            VerticalOptions="End"
                                            Padding="15">
                                            <Label 
                                                FontSize="24"
                                                FontAttributes="Bold"
                                                Text="{Binding Name}"/>
                                            <Label 
                                                FontSize="14"
                                                Text="{Binding Description}"/>
                                        </StackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </StackLayout>
            </ScrollView>
            <Grid
                VerticalOptions="Start"
                HeightRequest="100"
                BackgroundColor="{Binding NavbarColor, Source={x:Reference Page}}"
                Padding="10">
                <Grid
                    VerticalOptions="End"
                    HorizontalOptions="Fill"
                    ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        StrokeThickness="0"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Aqua">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="50"/>
                        </Border.StrokeShape>
                        <Image Source="Resources/Images/avatar.png"></Image>
                    </Border>
                    <Grid
                        Grid.Column="1"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Grid.Row="0"
                            FontAttributes="Bold"
                            Text="Fruskoo"/>
                        <StackLayout
                            Grid.Column="0"
                            Grid.Row="1"
                            Spacing="10"
                            HorizontalOptions="Fill"
                            Orientation="Horizontal">
                            <Label 
                                Text="35,400"/>
                            <Label 
                                Text="4,330"/>
                        </StackLayout>
                    </Grid>
                    <StackLayout
                        Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="10"
                        HorizontalOptions="Center">
                        <ImageButton
                            Style="{StaticResource NavButton}"
                            Source="Resources/Images/game_console.svg"
                            Padding="6">
                            <ImageButton.Behaviors>
                                <toolkit:IconTintColorBehavior
                                    TintColor="White" />
                            </ImageButton.Behaviors>
                        </ImageButton>
                        <ImageButton
                            Style="{StaticResource NavButton}"
                            Source="Resources/Images/notification_bell_icon.svg"
                            Padding="5">
                            <ImageButton.Behaviors>
                                <toolkit:IconTintColorBehavior
                                    TintColor="White" />
                            </ImageButton.Behaviors>
                        </ImageButton>
                    </StackLayout>
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>